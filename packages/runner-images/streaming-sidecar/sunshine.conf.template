# Sunshine configuration for Dillinger sidecar
# This file is generated at container start using envsubst.

sunshine_name = ${SUNSHINE_NAME}
capture = wlr
output_name = HEADLESS-1
address = 0.0.0.0
web_port = 47990
rtsp_port = 48010
resolution = ${RESOLUTION_WIDTH}x${RESOLUTION_HEIGHT}
fps = ${REFRESH_RATE}
encoder = ${SUNSHINE_ENCODER}
audio_sink = ${SUNSHINE_AUDIO_SINK}
hevc_mode = 1
av1_mode = 1
file_apps = /home/streamer/.config/sunshine/apps.json
