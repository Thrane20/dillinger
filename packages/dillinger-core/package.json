{
  "name": "@dillinger/core",
  "version": "1.0.0",
  "description": "Dillinger Core (Next.js app with integrated API)",
  "private": true,
  "scripts": {
    "dev": "DILLINGER_CORE_PATH=${DILLINGER_CORE_PATH:-${DILLINGER_CORE_PATH_DEV:-/data}} PORT=3011 next dev -p 3011",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "format": "prettier --write app/**/*.{ts,tsx}",
    "clean": "rimraf .next out",
    "docker:build": "cd ../.. && pnpm --filter=@dillinger/shared run build && docker build -t dillinger-core:latest -f packages/dillinger-core/Dockerfile .",
    "docker:image": "cd ../.. && docker build -t dillinger-core:latest -f packages/dillinger-core/Dockerfile ."
  },
  "dependencies": {
    "@dillinger/shared": "workspace:*",
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.0.0",
    "@hookform/resolvers": "^3.3.0",
    "@types/ws": "^8.18.1",
    "autoprefixer": "^10.0.1",
    "axios": "^1.6.0",
    "clsx": "^2.0.0",
    "dockerode": "^4.0.0",
    "fs-extra": "^11.1.0",
    "next": "16.0.10",
    "openai": "^6.15.0",
    "postcss": "^8",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.48.0",
    "reactflow": "^11.11.4",
    "swr": "^2.2.0",
    "tailwindcss": "^3.3.0",
    "uuid": "^9.0.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-transport": "^4.9.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/dockerode": "^3.3.45",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "16.0.10",
    "eslint-plugin-react": "^7.37.0",
    "rimraf": "^5.0.0",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}