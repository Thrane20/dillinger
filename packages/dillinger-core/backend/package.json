{
  "name": "@dillinger/backend",
  "version": "1.0.0",
  "description": "Dillinger backend API server",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "DILLINGER_ROOT=${DILLINGER_ROOT:-$(pwd)/data} HOST_WORKSPACE_PATH=/mnt/linuxfast/dev/dillinger PORT=3001 tsx watch --clear-screen=false src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "data:init": "tsx src/scripts/init-data.ts",
    "data:seed": "tsx src/scripts/seed-platforms.ts"
  },
  "dependencies": {
    "@dillinger/shared": "workspace:*",
    "axios": "^1.6.0",
    "compression": "^1.7.0",
    "cors": "^2.8.0",
    "dockerode": "^4.0.0",
    "express": "^4.18.0",
    "express-rate-limit": "^7.0.0",
    "express-validator": "^7.0.0",
    "fs-extra": "^11.1.0",
    "helmet": "^7.0.0",
    "multer": "^1.4.0",
    "uuid": "^9.0.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.0",
    "@types/dockerode": "^3.3.45",
    "@types/express": "^4.17.0",
    "@types/fs-extra": "^11.0.0",
    "@types/jest": "^29.5.0",
    "@types/multer": "^1.4.0",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}