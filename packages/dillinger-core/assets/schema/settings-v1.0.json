{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://dillinger.dev/schemas/v1.0/settings.json",
  "title": "Settings",
  "description": "Schema for application settings in the Dillinger game library",
  "type": "object",
  "properties": {
    "scrapers": {
      "type": "object",
      "description": "Scraper configurations",
      "properties": {
        "igdb": {
          "type": "object",
          "description": "IGDB scraper configuration",
          "properties": {
            "clientId": {
              "type": "string",
              "description": "IGDB API client ID"
            },
            "clientSecret": {
              "type": "string",
              "description": "IGDB API client secret"
            }
          }
        }
      }
    },
    "retroarch": {
      "type": "object",
      "description": "RetroArch defaults",
      "properties": {
        "mame": {
          "type": "object",
          "description": "MAME display defaults",
          "properties": {
            "aspect": {
              "type": "string",
              "enum": ["4:3", "auto"],
              "description": "Aspect ratio preference for MAME"
            },
            "integerScale": {
              "type": "boolean",
              "description": "Enable integer scaling"
            },
            "borderlessFullscreen": {
              "type": "boolean",
              "description": "Use borderless fullscreen"
            }
          }
        }
      }
    }
  }
}
