{
  "$schema": "../../../schema/platform-v1.0.json",
  "schemaVersion": "1.0",
  "id": "windows-wine",
  "name": "Windows (Wine)",
  "type": "wine",
  "description": "Windows games and applications via Wine compatibility layer. Supports installers and pre-installed games.",
  "configuration": {
    "containerImage": "ghcr.io/thrane20/dillinger/runner-wine:latest",
    "supportedExtensions": [".exe", ".msi", ".bat", ".cmd"],
    "defaultSettings": {
      "environment": {
        "DISPLAY": ":0",
        "WINEPREFIX": "/wineprefix",
        "WINEARCH": "win64",
        "WINEDEBUG": "-all"
      }
    }
  },
  "validation": {
    "fileValidation": [".exe", ".msi", ".bat", ".cmd"]
  },
  "displayStreaming": {
    "method": "x11"
  },
  "isActive": true,
  "created": "2025-11-02T13:30:00Z",
  "updated": "2025-11-02T13:30:00Z"
}
