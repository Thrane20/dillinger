{
  "$schema": "../../../schema/platform-v1.0.json",
  "schemaVersion": "1.0",
  "id": "pet",
  "name": "Commodore PET",
  "type": "emulator",
  "description": "Commodore PET games via VICE emulator. Supports disk images, tapes, and program files.",
  "configuration": {
    "containerImage": "dillinger/runner-vice:latest",
    "supportedExtensions": [".d64", ".d81", ".t64", ".tap", ".prg", ".p00", ".zip"],
    "defaultSettings": {
      "environment": {
        "DISPLAY": ":0",
        "VICE_ROM_PATH": "/usr/lib/vice",
        "VICE_CONFIG_DIR": "/config/vice"
      },
      "launch": {
        "command": "xpet",
        "arguments": ["-autostart"]
      }
    }
  },
  "validation": {
    "fileValidation": [".d64", ".d81", ".t64", ".tap", ".prg", ".p00", ".zip"]
  },
  "displayStreaming": {
    "method": "x11"
  },
  "isActive": true,
  "created": "2025-11-09T12:40:00Z",
  "updated": "2025-11-09T12:40:00Z"
}
