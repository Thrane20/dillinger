{
  "name": "dillinger",
  "version": "1.0.0",
  "description": "Game library management platform with cross-platform execution",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel --filter=@dillinger/core run dev",
    "dev:all": "pnpm --parallel run dev",
    "build": "pnpm --recursive run build",
    "test": "pnpm --recursive run test", 
    "type-check": "pnpm --recursive run type-check",
    "lint": "pnpm --recursive run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm --recursive run clean && rm -rf node_modules",
    "setup": "pnpm install && pnpm run build:shared && pnpm run type-check",
    "build:shared": "pnpm --filter=@dillinger/runner-types --filter=@dillinger/validation run build",
    "dev:core": "pnpm --filter=@dillinger/core run dev",
    "dev:runner": "pnpm --filter=@dillinger/runner run dev",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:runner": "docker-compose -f docker-compose.runner.yml up --build"
  },
  "keywords": [
    "game-library",
    "game-manager",
    "docker",
    "streaming",
    "cross-platform"
  ],
  "author": "Dillinger Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}